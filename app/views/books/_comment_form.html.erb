<section id="app" class="comments">
  <article>
    <% if current_user.avatar.present? %>
      <%= cl_image_tag(current_user.avatar) %>
    <% else %>
      <%= image_tag("avatar-default.png") %>
    <% end %>
    <h4><%= link_to current_user.name, user_path(current_user.id) %></h4>
    <%= form_for :comment, url: comments_path, remote: true do |f| %>
      <%= hidden_field_tag :book_id, @book.id %>
      <%= f.text_area :content, size: "120x5" %><br>
      <%= f.submit 'Comment' %>
    <% end %>    
  </article>
</section>
