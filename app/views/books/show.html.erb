<% provide(:title, @book.title) %>
<div class="single-product-area section-padding-100 clearfix">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-lg-7">
          <div id="product_details_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <a class="gallery_img" href="img/product-img/pro-big-1.jpg">
                  <% if @book.picture.present? %>
                    <%= cl_image_tag(@book.picture, {:style => "height:600px; display: block; margin-left: auto; margin-right:auto;"}) %>
                  <% else %>
                    <%= image_tag(image_for_book, {:style => "height:600px; display: block; margin-left: auto; margin-right:auto;"}) %>
                  <% end %>
                </a>
              </div>
            </div>
          </div>
      </div>
      <div class="col-12 col-lg-5">
        <div class="single_product_desc">
          <div class="product-meta-data">
            <div class="line"></div>
            <!-- <p class="product-price">$180</p> -->
            <%= link_to @book do %>
              <h6><%= @book.title %></h6>
            <% end %>
            <div class="ratings-review mb-15 d-flex align-items-center justify-content-between">
              <div class="ratings">
                  <%= rating_for @book, "quality", star: 5,  disable_after_rate: false, cancel: true %>
              </div>
              <div class="review">
                <div id="like-form">
                  <%= render "likes/like_form" %><br>
                </div>
              </div>
            </div>
          </div>
          <%= social_share_button_tag(@book.title) %>
          <div class="short_overview my-5" id="form">
            <%= render "information" %>
            <% if logged_in? %>
              <%= link_to book_generate_comment_form_path(@book), remote: true do %>
                <button type="button" class="btn btn-warning">Comment</button>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-12 col-lg-1"></div>
      <div class="col-12 col-lg-11">
        <div id="comment_div">
          <%= render "comments/comment_div" %>
        </div>
      </div>
    </div>
  </div>
</div>
